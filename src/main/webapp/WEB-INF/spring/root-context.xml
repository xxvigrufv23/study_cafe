    <bean id="hikariConfig" class="com.zaxxer.hikari.HikariConfig">
		<property name="driverClassName" value="com.mysql.cj.jdbc.Driver"></property> 
        <property name="jdbcUrl" value="jdbc:mysql://localhost:3306/workathome?serverTimezone=Asia/Seoul"></property> 
		<property name="username" value="root"></property>
		<property name="password" value="!Q2w3e4r5t"></property>
	</bean>	
    
    <bean id="datasource" class="com.zaxxer.hikari.HikariDataSource" destroy-method="close"> 
        <constructor-arg ref="hikariConfig"></constructor-arg> 
    </bean>    	
    
    
	 <bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="datasource"></property>
        <!--Mapper 위치 설정 -->
		<property name="mapperLocations" value="classpath:com.study.mapper/*.xml"></property>
    </bean>    	
    
	<context:component-scan base-package="com.study.sample"></context:component-scan>
	
	<mybatis-spring:scan base-package="com.study.mapper"/>
    <context:component-scan base-package="com.study.model"></context:component-scan>
    <context:component-scan base-package="com.study.service"></context:component-scan>
		
</beans>
